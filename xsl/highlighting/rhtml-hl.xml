<highlighter type="word">
	<!-- highlight the ERB open and close tags as directives -->
	<word>&amp;&gt;</word>
	<word>&lt;&amp;</word>
	<word>&lt;&amp;=</word>
	<style>directive</style>
</highlighter>
<highlighter type="keywords">
  <keyword>stylesheet_link_tag</keyword>
  <keyword>csrf_meta_tags</keyword>
  <keyword>javascript_include_tag</keyword>
  
  
  <keyword>link_to</keyword>
  <keyword>button_to</keyword>
  <keyword>number_to_currency</keyword>
  <keyword>time_ago_in_words</keyword>
  <keyword>yield</keyword>
  <keyword>if</keyword>
  <keyword>else</keyword>
  <keyword>elsif</keyword>
  <keyword>do</keyword>
  <keyword>end</keyword>
  <keyword>render</keyword>
  <keyword>form_for</keyword>
  
</highlighter>

<highlighter type="string">
	<string>"</string>
	<escape>\</escape>
	<spanNewLines />
</highlighter>
<highlighter type="string">
	<string>'</string>
	<escape>\</escape>
	<spanNewLines />
</highlighter>

<highlighter type="number">
	<point>.</point>
	<exponent>e</exponent>
	<ignoreCase />
</highlighter>

</highlighters>